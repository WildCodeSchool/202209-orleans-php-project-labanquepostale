{% extends 'layout.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('lesson') }}
{% endblock %}
{% set title = 'Tutoriel' %}


{% block title %}Tutoriel
{% endblock %}

{% block body %}
	<p class="titleTuto fs-1 fw-bold">Tutoriels</p>
	<div class="bodyContainer container">
		<div class="wordMain">
			<h2>Bonjour,</h2>
			<h2 class="userName">{{ app.user.firstName }}!</h2>
		</div>
		<div class="cards-container">
			{% for tutorial in tutorials %}
				<div class="alignCard card justify-content-center col-6 text-center">
					<div class="mt-2">
						<a class="lesson" href="{{ path('tutorial_show', {id: tutorial.id}) }}">
							<h2 class="descript fs-4 mx-1">{{ tutorial.title }}</h2>
						</a>
						<p class="lessonNb fs-6 text-primary">{{ (app.user.lessons|filter(lesson => lesson.tutorial == tutorial)|length) }}
							sur
							{{ tutorial.lessons|length }}
							Le√ßon(s)</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
