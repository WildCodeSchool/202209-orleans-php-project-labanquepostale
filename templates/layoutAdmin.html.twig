{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block title %}Admin - Blue Line
{% endblock %}

{% block header %}
	{% include 'components/_headerAdmin.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<nav class="navbar navbar-expand-lg bg-light">
			<div class="container">
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item mx-3">
							<a class="nav-link" aria-current="page" href="{{ path('app_admin')}}">Accueil</a>
						</li>
						<li class="nav-item mx-3">
							<a class="nav-link" aria-current="page" href="{{ path('app_admin_tutorial_index')}}">Tutoriels</a>
						</li>
						<li class="nav-item mx-3">
							<a class="nav-link" href="#">Le√ßons</a>
						</li>
						<li class="nav-item mx-3">
							<a class="nav-link" href="#">Quizz</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<div class="row">
			<div class="block card p-5 overflow-auto">
				<div class="text-center p-4">
					{% for tutorial, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ tutorial }}">
								{{ message }}
							</div>
						{% endfor %}
					{% endfor %}
					{% block content %}{% endblock %}
				</div>
			</div>
		</div>
	</div>
	{% block footer %} {% endblock %}
{% endblock %}
