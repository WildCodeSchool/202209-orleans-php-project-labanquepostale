{% extends 'layoutAdmin.html.twig' %}

{% block title %}Admin - Éditer leçon
{% endblock %}

{% block content %}
	<div class="container text-start">
		<div class="col justify-content-start">
			<a href="{{ path('app_admin_tutorial_lesson_show', {'id': lesson.tutorial.id }) }}" class="btn btn-outline-primary mt-2 mb-4" role="button">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 me-2 bi bi-arrow-left" viewbox="0 0 16 16">
					<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
				</svg>Retour aux leçons</a>
			<div class="row">
				<h1 class="text-primary text-center">Éditer leçon :
					{{ lesson.title }}</h1>
				<div class="row gap-2">
					{{ include('admin_lesson/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
					{{ include('admin_lesson/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
