{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('quiz') }}
{% endblock %}

{% set title = 'Exercice'  %}
{% set return_path = path('tutorial_show', {id: tutorial.id}) %}

{% block title %}
	{{lesson.title}}
{% endblock %}

{% block flash %}{% endblock %}

{% block body %}
	<div class="quizbody container">
		<p class="title text-center text-secondary fs-1 fw-bold">{{ lesson.title }}</p>
		<div class="row">
			<div class="description-block my-4 col-lg-10 offset-lg-1">
				<p class="text-light mt-2 p-2">{{ lesson.description|nl2br  }}</p>
			</div>
			<div class="video_lesson my-3">
				<iframe class="embed-responsive-item" src="{{lesson.video}}" allowfullscreen></iframe>
			</div>
		</div>
		{% include 'components/_message_flash.html.twig' %}
		<div class="mt-3">
			{% include 'components/_quiz.html.twig' %}
		</div>
	</div>
{% endblock %}
